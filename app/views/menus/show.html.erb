<p id="notice"><%= notice %></p>

<div class= "panel panel-primary">
  <div class= "panel-heading">
  <h3><strong><%= @menu.item %></strong></h3>
  </div>
  <div class = "panel-body">
  <p><%= @menu.description %></p>
  <p><%= image_tag @menu.avatar.url(:medium), class: "img-responsive" %></p>
  </div>
</div>

<div class="panel panel-success">
    <div class="panel-heading">
      Make a Comment
    </div>
    <div class="panel-body">
      <%= render 'comments/form' %>
    </div>
</div>

<div class="panel panel-default">
  <div class="panel-header">
    <h4>Comments</h4>
  </div>
  <% @menu.comments.each do |comment| %>
    <div class="panel-body">
      <p><strong><%= comment.user.username %></strong> said:</p>
      <p><%= comment.entry %></p>
    </div>
       <p><% "#{comment.rating}".to_i.times do %>
        <span class="glyphicon glyphicon-star"></span>
        <% end %>
        </p>

  <% end %>
</div>
<%= link_to 'Edit', edit_menu_path(@menu) %> |
<%= link_to 'Back', menus_path %>
